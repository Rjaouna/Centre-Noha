{% extends 'base.html.twig' %}

{% block title %}Suivi des soins
{% endblock %}

{% block body %}
	<div class="container-fluid mt-4">

		{# -------------------------------------------- #}
		{# ðŸ”µ HEADER STYLE                              #}
		{# -------------------------------------------- #}
			<div class="card shadow-lg border-0 rounded-4 mb-4"> <div class="card-body d-flex justify-content-between align-items-center py-4 px-4">

				<div class="d-flex align-items-center">
					<i class="bi bi-heart-pulse-fill text-danger fs-1 me-3"></i>
					<div>
						<h2 class="fw-bold text-danger mb-1">Suivi des soins</h2>
						<p class="text-muted mb-0">Historique complet des consultations</p>
					</div>
				</div>

				<a href="{{ path('app_suivi_soin_new') }}" class="btn btn-success btn-lg px-4 rounded-pill shadow-sm">
					<i class="bi bi-plus-circle fs-4 me-2"></i>
					Nouveau suivi
				</a>

			</div>
		</div>


		{# -------------------------------------------- #}
		{# ðŸŸ¦ TABLEAU MODERNISÃ‰ AVEC NOM PATIENT        #}
		{# -------------------------------------------- #}
			

			<div class="card-body p-4">
				<table id="suiviTable" class="table table-striped table-hover align-middle rounded-4 overflow-hidden">

					<thead class="table-primary text-dark">
						<tr>
							<th>
								<i class="bi bi-hash"></i>
								ID</th>
							<th>
								<i class="bi bi-person-fill"></i>
								Patient</th>
							<th>
								<i class="bi bi-clipboard2-pulse"></i>
								Diagnostic</th>
							<th>
								<i class="bi bi-calendar-check"></i>
								CrÃ©Ã©</th>
							<th>
								<i class="bi bi-pencil"></i>
								ModifiÃ©</th>
							<th class="text-center">
								<i class="bi bi-gear"></i>
								Actions</th>
						</tr>
					</thead>

					<tbody>
						{% for suivi_soin in suivi_soins %}
							<tr>
								<td class="fw-bold">{{ suivi_soin.id }}</td>

								{# ðŸŸ¢ NOM DU PATIENT #}
								<td class="fw-semibold">
									<i class="bi bi-person-circle text-primary me-1"></i>
									{{ suivi_soin.patient ? suivi_soin.patient.nom : 'â€”' }}
								</td>

								<td>{{ suivi_soin.diagnostic }}</td>

								<td>{{ suivi_soin.createdAt ? suivi_soin.createdAt|date('d/m/Y H:i') : '' }}</td>
								<td>{{ suivi_soin.updatedAt ? suivi_soin.updatedAt|date('d/m/Y H:i') : '' }}</td>

								<td class="text-center">

									<a href="{{ path('app_suivi_soin_show', {'id': suivi_soin.id}) }}" class="btn btn-outline-primary btn-sm px-3 rounded-pill me-2">
										<i class="bi bi-eye"></i>
										Voir
									</a>

									<a href="{{ path('app_suivi_soin_edit', {'id': suivi_soin.id}) }}" class="btn btn-outline-warning btn-sm px-3 rounded-pill">
										<i class="bi bi-pencil-square"></i>
										Modifier
									</a>

								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6" class="text-center text-muted py-4">
									<i class="bi bi-exclamation-circle me-2"></i>
									Aucun suivi trouvÃ©
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>

		</div>
	</div>


	{# -------------------------------------------- #}
{# ðŸ“Œ DATATABLES                                #}
	{# -------------------------------------------- #}
	 <script>
	    document.addEventListener("DOMContentLoaded", () => {
	        $('#suiviTable').DataTable({
	            language: { url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json" },
	            order: [[0, "desc"]],
	            responsive: true
	        });
	    });
	</script>

{% endblock %}


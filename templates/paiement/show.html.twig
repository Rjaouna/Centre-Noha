{% extends 'base.html.twig' %}

{% block title %}Détails du paiement
{% endblock %}

{% block body %}

	<div
		class="container-fluid mt-4">

		<!-- HEADER -->
		<div class="card shadow-lg border-0 rounded-4 mb-4">
			<div
				class="card-body d-flex justify-content-between align-items-center py-4 px-4">

				<!-- GAUCHE -->
				<div class="d-flex align-items-center">
					<i class="bi bi-receipt-cutoff text-primary fs-1 me-3"></i>
					<div>
<h2 class="fw-bold text-primary mb-1">Détails du paiement</h2>

					</div>
				</div>

				<!-- DROITE -->
				<div
					class="d-flex gap-3">

					<!-- Retour liste paiements -->
					<a href="{{ path('app_paiement_index', {'id': paiement.client.id}) }}" class="btn btn-secondary btn-lg rounded-pill px-4 shadow-sm d-flex align-items-center gap-2">
						<i class="bi bi-arrow-left"></i>
						Retour
					</a>

					<!-- Edit -->
					<a href="{{ path('app_paiement_edit', {'id': paiement.id}) }}" class="btn btn-warning btn-lg rounded-pill px-4 shadow-sm d-flex align-items-center gap-2">
						<i class="bi bi-pencil-square"></i>
						Modifier
					</a>

				</div>

			</div>
		</div>

		<!-- CARD DETAILS -->
		<div class="card shadow-sm border-0 rounded-4 mb-4">
			<div class="card-body p-4">

				<div class="row g-4">

					<div class="col-md-4">
						<div class="p-3 bg-light rounded-4 shadow-sm">
							<h6 class="text-muted mb-1">
								<i class="bi bi-cash-stack me-1"></i>
								Prix total</h6>
							<p class="fs-4 fw-bold text-dark">{{ paiement.prixTotal }}
								DH</p>
						</div>
					</div>

					<div class="col-md-4">
						<div class="p-3 bg-light rounded-4 shadow-sm">
							<h6 class="text-muted mb-1">
								<i class="bi bi-cash me-1"></i>
								Montant payé</h6>
							<p class="fs-4 fw-bold text-success">{{ paiement.montantPaye }}
								DH</p>
						</div>
					</div>

					<div class="col-md-4">
						<div class="p-3 bg-light rounded-4 shadow-sm">
							<h6 class="text-muted mb-1">
								<i class="bi bi-wallet2 me-1"></i>
								Reste</h6>
							<p class="fs-4 fw-bold text-danger">{{ paiement.reste }}
								DH</p>
						</div>
					</div>

				</div>

				<hr class="my-4">

				<div class="row g-4">

					<div class="col-md-4">
						<div class="p-3 bg-white border rounded-4 shadow-sm">
							<h6 class="text-muted mb-1">
								<i class="bi bi-credit-card me-1"></i>
								Type de paiement</h6>
							<span class="badge bg-primary px-3 py-2 rounded-pill fs-6">
								{{ paiement.typePaiement }}
							</span>
						</div>
					</div>

					<div class="col-md-4">
						<div class="p-3 bg-white border rounded-4 shadow-sm">
							<h6 class="text-muted mb-1">
								<i class="bi bi-calendar-check me-1"></i>
								Créé le</h6>
							<p class="fw-semibold">
								{{ paiement.createdAt ? paiement.createdAt|date('d/m/Y H:i') : '' }}
							</p>
						</div>
					</div>

					<div class="col-md-4">
						<div class="p-3 bg-white border rounded-4 shadow-sm">
							<h6 class="text-muted mb-1">
								<i class="bi bi-calendar-week me-1"></i>
								Mis à jour le</h6>
							<p class="fw-semibold">
								{{ paiement.updatedAt ? paiement.updatedAt|date('d/m/Y H:i') : '' }}
							</p>
						</div>
					</div>

				</div>

			</div>
		</div>

		<!-- DELETE BUTTON -->
		<div class="text-end">
			{{ include('paiement/_delete_form.html.twig') }}
		</div>

	</div>

{% endblock %}


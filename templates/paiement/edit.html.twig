{% extends 'base.html.twig' %}

{% block title %}Modifier un paiement
{% endblock %}

{% block body %}

	<div
		class="container-fluid mt-4">

		<!-- HEADER -->
		<div class="card shadow-lg border-0 rounded-4 mb-4">
			<div
				class="card-body d-flex justify-content-between align-items-center py-4 px-4">

				<!-- Titre + icône -->
				<div class="d-flex align-items-center">
					<i class="bi bi-pencil-square text-warning fs-1 me-3"></i>
					<div>
<h2 class="fw-bold text-warning mb-1">Modifier le paiement</h2>

					</div>
				</div>

				<!-- Boutons -->
				<div
					class="d-flex gap-3">

					<!-- Retour liste -->
					<a href="{{ path('app_paiement_index', {'id': paiement.client.id}) }}" class="btn btn-secondary btn-lg rounded-pill px-4 shadow-sm d-flex align-items-center gap-2">
						<i class="bi bi-arrow-left"></i>
						Retour
					</a>

				</div>

			</div>
		</div>

		<!-- FORMULAIRE -->
		<div class="card shadow-sm border-0 rounded-4">
			<div class="card-body p-4">

				{{ include('paiement/_form.html.twig', { button_label: 'Mettre à jour' }) }}

				<hr
				class="my-4">

				<!-- SUPPRESSION -->
				<div class="d-flex justify-content-end">
					{{ include('paiement/_delete_form.html.twig') }}
				</div>

			</div>
		</div>

	</div>

{% endblock %}


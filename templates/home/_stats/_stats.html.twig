        });

        const timeLabel = start.toLocaleTimeString('fr-FR', {
            hour: '2-digit',
            minute: '2-digit'
        });

        container.insertAdjacentHTML('beforeend', `
            <div class="col-md-6 col-lg-4">
                <div class="rdv-ux-card ${isExpired ? 'rdv-expired' : ''}">


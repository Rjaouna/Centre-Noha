<table class="table table-striped align-middle">
	<thead>
		<tr>
			<th>Titre</th>
			<th>Contenu</th>
			<th width="160" class="text-end">Actions</th>
		</tr>
	</thead>

	<tbody>
		{% for cert in certificats %}
			<tr>
				<td class="fw-semibold">{{ cert.titre }}</td>
				<td class="text-muted">{{ cert.contenu }}</td>

				<td class="text-end">
					<div class="table-actions">

						<button type="button" class="btn btn-action btn-action-primary" onclick="openEditCertificat({{ cert.id }})" title="Modifier" data-bs-toggle="tooltip">
							<i class="bi bi-pencil"></i>
						</button>

						<button type="button" class="btn btn-action btn-action-danger" onclick="deleteCertificat({{ cert.id }})" title="Supprimer" data-bs-toggle="tooltip">
							<i class="bi bi-trash"></i>
						</button>

					</div>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="3" class="text-center text-muted py-4">
					Aucun certificat
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

<style>
/* ✅ Actions DataTable (pro, côte à côte) */
.table-actions {
	display: inline-flex;
	align-items: center;
	gap: 0.5rem;
	padding: 0.35rem;
	border-radius: 999px;
	background: rgba(13, 110, 253, .06);
	border: 1px solid rgba(13, 110, 253, .10);
}

.btn-action {
	width: 36px;
	height: 36px;
	padding: 0;
	border-radius: 12px;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	font-size: 1rem;
	box-shadow: 0 6px 16px rgba(0, 0, 0, .06);
	background: #fff;
}

.btn-action-primary {
	border: 1px solid rgba(13, 110, 253, .25);
	color: #0d6efd;
}

.btn-action-danger {
	border: 1px solid rgba(220, 53, 69, .25);
	color: #dc3545;
}

.btn-action:hover {
	filter: brightness(0.98);
}

/* Mobile */
@media (max-width: 576px) {
	.btn-action {
		width: 34px;
		height: 34px;
	}
}
</style>
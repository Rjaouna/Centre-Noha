{% extends 'base.html.twig' %}

{% block title %}
	{{ medicine.name }}
	- M√©dicament
{% endblock %}

{% block body %}

	<div
		class="mt-4">

		{# ================= HEADER : D√âTAIL M√âDICAMENT ================= #}
		{% embed '_partials/_page_header.html.twig' with {
		icon: 'bi bi-capsule-pill',
		title: medicine.name,
		subtitle: 'Code : ' ~ medicine.code
	} %}

			{# Actions m√©tier (mobile √† gauche) #}
			{% block header_actions_left %}

				{# üîç Retour recherche #}
<a href="{{ path('medicine_index') }}" class="action-icon bg-outline" data-bs-toggle="tooltip" title="Retour √† la recherche">

					<i class="bi bi-search"></i>
				</a>

				{# ‚ûï Ajouter #}
				<a href="{{ path('medicine_new') }}" class="action-icon bg-danger text-white" data-bs-toggle="tooltip" title="Ajouter un m√©dicament">
					<i class="bi bi-plus-circle"></i>
				</a>

			{% endblock %}

			{# Navigation (mobile √† droite) -> par d√©faut home + retour dans ton partial #}
		{% endembed %}


		{# ================= FICHE M√âDICAMENT ================= #}
		<section class="mb-4">
			<div class="card shadow-sm border-0 rounded-4">
				<div class="card-body p-4 p-md-5">

					<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-4">
						<div>
							<h4 class="fw-bold text-primary mb-1 d-flex align-items-center">
								<i class="bi bi-info-circle-fill me-2"></i>
								Informations d√©taill√©es
							</h4>
							<p class="text-muted small mb-0">
								Consultez les informations essentielles de la fiche m√©dicament
							</p>
						</div>

						<div class="d-flex align-items-center gap-2">
							{% if medicine.isGeneric %}
								<span class="badge bg-success rounded-pill px-3 py-2">
									<i class="bi bi-check2-circle me-1"></i>
									G√©n√©rique
								</span>
							{% else %}
								<span class="badge bg-warning text-dark rounded-pill px-3 py-2">
									<i class="bi bi-star-fill me-1"></i>
									Princeps
								</span>
							{% endif %}

							{% if medicine.tauxRembourssement %}
								<span class="badge bg-info text-dark rounded-pill px-3 py-2">
									<i class="bi bi-percent me-1"></i>
									{{ medicine.tauxRembourssement }}%
								</span>
							{% else %}
								<span class="badge bg-danger-subtle text-danger rounded-pill px-3 py-2">
									<i class="bi bi-x-circle me-1"></i>
									Non remboursable
								</span>
							{% endif %}
						</div>
					</div>

					<div
						class="row g-3 g-md-4">

						{# Nom commercial #}
						<div class="col-md-6">
							<div class="info-card">
								<div class="info-top">
									<span class="info-icon text-danger bg-danger-subtle">
										<i class="bi bi-capsule"></i>
									</span>
									<div class="info-meta">
										<div class="info-label">Nom commercial</div>
										<div class="info-value">{{ medicine.name }}</div>
									</div>
								</div>
							</div>
						</div>

						{# DCI #}
						<div class="col-md-6">
							<div class="info-card">
								<div class="info-top">
									<span class="info-icon text-primary bg-primary-subtle">
										<i class="bi bi-flower3"></i>
									</span>
									<div class="info-meta">
										<div class="info-label">DCI</div>
										<div class="info-value">{{ medicine.dci ?: '‚Äî' }}</div>
									</div>
								</div>
							</div>
						</div>

						{# Dosage #}
						<div class="col-md-6">
							<div class="info-card">
								<div class="info-top">
									<span class="info-icon text-warning bg-warning-subtle">
										<i class="bi bi-bezier2"></i>
									</span>
									<div class="info-meta">
										<div class="info-label">Dosage</div>
										<div class="info-value">
											{{ medicine.dosage ?: '‚Äî' }}
											{{ medicine.uniteDosage ?: '' }}
										</div>
									</div>
								</div>
							</div>
						</div>

						{# Forme #}
						<div class="col-md-6">
							<div class="info-card">
								<div class="info-top">
									<span class="info-icon text-secondary bg-secondary-subtle">
										<i class="bi bi-collection"></i>
									</span>
									<div class="info-meta">
										<div class="info-label">Forme</div>
										<div class="info-value">{{ medicine.forme ?: '‚Äî' }}</div>
									</div>
								</div>
							</div>
						</div>

						{# Pr√©sentation #}
						<div class="col-md-6">
							<div class="info-card">
								<div class="info-top">
									<span class="info-icon text-dark bg-light">
										<i class="bi bi-box-seam"></i>
									</span>
									<div class="info-meta">
										<div class="info-label">Pr√©sentation</div>
										<div class="info-value">{{ medicine.presentation ?: '‚Äî' }}</div>
									</div>
								</div>
							</div>
						</div>

						{# PPV #}
						<div class="col-md-6">
							<div class="info-card">
								<div class="info-top">
									<span class="info-icon text-info bg-info-subtle">
										<i class="bi bi-currency-exchange"></i>
									</span>
									<div class="info-meta">
										<div class="info-label">Prix public (PPV)</div>
										<div class="info-value">
											<span class="badge bg-info text-dark px-3 py-2 rounded-pill">
												{{ medicine.ppv ?: '‚Äî' }}
												DH
											</span>
										</div>
									</div>
								</div>
							</div>
						</div>

						{# PH #}
						<div class="col-md-6">
							<div class="info-card">
								<div class="info-top">
									<span class="info-icon text-success bg-success-subtle">
										<i class="bi bi-hospital"></i>
									</span>
									<div class="info-meta">
										<div class="info-label">Prix h√¥pital (PH)</div>
										<div class="info-value">{{ medicine.ph ?: '‚Äî' }}</div>
									</div>
								</div>
							</div>
						</div>

						{# Code #}
						<div class="col-md-6">
							<div class="info-card">
								<div class="info-top">
									<span class="info-icon text-primary bg-primary-subtle">
										<i class="bi bi-upc-scan"></i>
									</span>
									<div class="info-meta">
										<div class="info-label">Code</div>
										<div class="info-value">{{ medicine.code ?: '‚Äî' }}</div>
									</div>
								</div>
							</div>
						</div>

						{# Remboursement #}
						<div class="col-md-6">
							<div class="info-card">
								<div class="info-top">
									<span class="info-icon text-warning bg-warning-subtle">
										<i class="bi bi-percent"></i>
									</span>
									<div class="info-meta">
										<div class="info-label">Taux de remboursement</div>
										<div class="info-value">
											{% if medicine.tauxRembourssement %}
												{{ medicine.tauxRembourssement }}%
											{% else %}
												Non remboursable
											{% endif %}
										</div>
									</div>
								</div>
							</div>
						</div>

					</div>

				</div>
			</div>
		</section>

	</div>

	<style>
		/* Cards info (pro, coh√©rent) */
		.info-card {
			background: #fff;
			border: 1px solid rgba(0, 0, 0, .08);
			border-radius: 18px;
			padding: 16px 18px;
			box-shadow: 0 8px 18px rgba(0, 0, 0, .06);
			height: 100%;
		}
		.info-top {
			display: flex;
			align-items: center;
			gap: 14px;
		}
		.info-icon {
			width: 46px;
			height: 46px;
			border-radius: 14px;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 1.25rem;
		}
		.info-label {
			font-size: 0.75rem;
			color: #6c757d;
			text-transform: uppercase;
			letter-spacing: 0.04em;
			margin-bottom: 2px;
		}
		.info-value {
			font-weight: 700;
			color: #212529;
		}
	</style>

{% endblock %}


	{% block javascripts %}
{{ parent() }}


	
 <script>
document.addEventListener("DOMContentLoaded", () => {

    // Son au clic
    buttonSoundClick("buttonSave", "disabled");

    const form  = document.getElementById("ficheForm");
    const pop   = document.getElementById("popupSuccess");
    const modal = new bootstrap.Modal(document.getElementById('modalAddClient'));
const routeShowPatient = "{{ path('app_fiche_client_show', {'id': 0}) }}".replace('/0', '');




    form.addEventListener("submit", async function (e) {
        e.preventDefault();

        const formData = new FormData(form);
        let data = {};

        formData.forEach((value, key) => {
            const cleanKey = key.replace('fiche_client[', '').replace(']', '');
            data[cleanKey] = value;
        });

        try {
            const response = await fetch("{{ path('app_fiche_client_new') }}", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "X-Requested-With": "XMLHttpRequest"
                },
                body: JSON.stringify(data)
            });

            const text = await response.text();

            if (!response.ok) {
                moveElement("modalAddClient");
                showFlashError("Erreur lors de l‚Äôenregistrement !");
                buttonSoundError('buttonSave');
                return;
            }

            // Essayer JSON
            let result;
            try {
                result = JSON.parse(text);
            } catch {
                moveElement("modalAddClient");
                showFlashError("Erreur lors de l‚Äôenregistrement !");
                buttonSoundError('buttonSave');
                return;
            }

            // Succ√®s
            buttonSoundSuccess('buttonSave');
             // Reset + fermeture modal + animation carte
            form.reset();
            pop.style.display = "block";               // ‚Üê remplace display:none

modal.hide();
moveElement("blocListClient")




            // üî• AFFICHER LE POPUP IMM√âDIATEMENT ICI
           
            pop.innerHTML = `
<div class="d-flex align-items-start">
	<i class="bi bi-check-circle-fill fs-1 text-white bg-success p-2 rounded-circle me-3"></i>

	<div>
		<h5 class="fw-bold mb-1">Patient ajout√© avec succ√®s ! üéâ</h5>

		<p class="mb-1">
			Le nouveau patient a √©t√© bien enregistr√© dans le syst√®me.
		</p>

		<ul class="mb-1 ps-3" style="font-size: 0.9rem;">
			<li><strong>Nom :</strong> ${result.nom}</li>
			<li><strong>Ville :</strong> ${result.ville}</li>
			<li><strong>T√©l√©phone :</strong> ${result.telephone}</li>
		</ul>

<a href="${routeShowPatient}/${result.id}" class="btn btn-outline-light btn-sm px-3 rounded-pill shadow-sm mt-2">
	<i class="bi bi-eye"></i>
	Voir le patient
</a>

	</div>

	<button type="button" class="btn-close" onclick="document.getElementById('popupSuccess').style.display='none';"></button>
</div>
            `;

           

        } catch (error) {
            console.error("Erreur JS :", error);
            buttonSoundError('buttonSave');
            moveElement("modalAddClient");
            showFlashError("Erreur lors de l‚Äôenregistrement !");
        }
    });
});
</script>


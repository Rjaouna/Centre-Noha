{% extends 'base.html.twig' %}

{% block title %}Gestion des patients
{% endblock %}

{% block body %}

	<div
		class="container-fluid mt-4">

		<!-- üîπ HEADER -->
		<div class="card shadow-lg border-0 rounded-4 mb-4">
			<div class="card-body px-4 py-4">
				<div class="row align-items-center">

					<div class="col-md-7 d-flex align-items-center">
						<i class="bi bi-people-fill text-primary fs-1 me-3"></i>
						<div>
							<h2 class="fw-bold text-primary mb-0">Gestion des patients</h2>
							<small class="text-muted">Suivi m√©dical & dossiers patients</small>
						</div>
					</div>

					<div class="col-md-5 d-flex flex-column flex-md-row gap-2 justify-content-md-end mt-3 mt-md-0">
<button class="btn btn-primary  rounded-pill d-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#modalAddClient">

							<i class="bi bi-person-plus"></i>
							Nouveau patient
						</button>

<a href="{{ path('app_home') }}" class="btn btn-outline-secondary  rounded-pill d-flex align-items-center gap-2">

							<i class="bi bi-arrow-left"></i>
							Accueil
						</a>
					</div>

				</div>
			</div>
		</div>

		<!-- üîπ TABLE -->
		<div class="card shadow-sm border-0 rounded-4">
			<div class="card-body p-4">

				<table id="patientsTable" class="table table-hover align-middle w-100">

					<thead class="table-light">
						<tr>
							<th>#</th>
							<th>Patient</th>
							<th>Ville</th>
							<th>T√©l√©phone</th>
							<th>Pathologie</th>
							<th>Dossier m√©dical</th>
							<th class="text-center">Actions</th>
						</tr>
					</thead>

					<tbody>
						{% for fiche_client in fiche_clients %}
							{% set isNew = not fiche_client.isConsulted %}

							<tr
								class="{{ isNew ? 'table-success bg-opacity-10' : '' }}">

								<!-- ID -->
								<td class="fw-bold">{{ fiche_client.id }}</td>

								<!-- PATIENT -->
								<td>
									<div class="d-flex align-items-center gap-2">
										<strong>{{ fiche_client.nom }}</strong>

										{% if isNew %}
											<span class="badge bg-success rounded-pill">
												Nouveau
											</span>
										{% endif %}
									</div>
								</td>

								<!-- VILLE -->
								<td>{{ fiche_client.ville }}</td>

								<!-- TEL -->
								<td>{{ fiche_client.telephone }}</td>

								<!-- MALADIE -->
								<td>
									<span class="badge bg-info bg-opacity-75 rounded-pill px-3">
										{{ fiche_client.typeMaladie }}
									</span>
								</td>

								<!-- DOSSIER -->
								<td>
									<a href="{{ path('app_dossier_medical_index', { id: fiche_client.id }) }}" class="btn btn-sm {{ isNew ? 'btn-success' : 'btn-outline-primary' }}
											                                      rounded-pill d-flex align-items-center gap-2 shadow-sm">

										<i class="bi bi-folder2-open fs-5"></i>

										{% if fiche_client.dossierMedicals|length > 0 %}
											Dossiers
											<span class="badge bg-warning text-dark">
												{{ fiche_client.dossierMedicals|length }}
											</span>
										{% else %}
											Cr√©er dossier
										{% endif %}
									</a>
								</td>

								<!-- ACTIONS -->
								<td class="text-center">
									<a href="{{ path('app_fiche_client_show', {'id': fiche_client.id}) }}" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
										<i class="bi bi-eye"></i>
										Voir
									</a>
								</td>

							</tr>
						{% endfor %}
					</tbody>

				</table>

			</div>
		</div>

	</div>

	<!-- üîπ MODAL AJOUT -->
	<div class="modal fade" id="modalAddClient" tabindex="-1">
		<div class="modal-dialog modal-xl modal-dialog-centered">
			<div class="modal-content rounded-4 shadow-lg">
				<div class="modal-header bg-primary text-white">
					<h5 class="modal-title fw-bold">
						<i class="bi bi-person-plus me-2"></i>
						Ajouter un patient
					</h5>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body p-4">
					{{ include('fiche_client/_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>

{% endblock %}






{# -------------------------------------------- #}
{# JAVASCRIPT : DATATABLES + TON JS             #}
{# -------------------------------------------- #}
	{% block javascripts %}
{{ parent() }}


	
 <script>
document.addEventListener("DOMContentLoaded", () => {

    // Son au clic
    buttonSoundClick("buttonSave", "disabled");

    const form  = document.getElementById("ficheForm");
    const pop   = document.getElementById("popupSuccess");
    const modal = new bootstrap.Modal(document.getElementById('modalAddClient'));
const routeShowPatient = "{{ path('app_fiche_client_show', {'id': 0}) }}".replace('/0', '');




    form.addEventListener("submit", async function (e) {
        e.preventDefault();

        const formData = new FormData(form);
        let data = {};

        formData.forEach((value, key) => {
            const cleanKey = key.replace('fiche_client[', '').replace(']', '');
            data[cleanKey] = value;
        });

        try {
            const response = await fetch("{{ path('app_fiche_client_new') }}", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "X-Requested-With": "XMLHttpRequest"
                },
                body: JSON.stringify(data)
            });

            const text = await response.text();

            if (!response.ok) {
                moveElement("modalAddClient");
                showFlashError("Erreur lors de l‚Äôenregistrement !");
                buttonSoundError('buttonSave');
                return;
            }

            // Essayer JSON
            let result;
            try {
                result = JSON.parse(text);
            } catch {
                moveElement("modalAddClient");
                showFlashError("Erreur lors de l‚Äôenregistrement !");
                buttonSoundError('buttonSave');
                return;
            }

            // Succ√®s
            buttonSoundSuccess('buttonSave');
             // Reset + fermeture modal + animation carte
            form.reset();
            pop.style.display = "block";               // ‚Üê remplace display:none

modal.hide();
moveElement("blocListClient")




            // üî• AFFICHER LE POPUP IMM√âDIATEMENT ICI
           
            pop.innerHTML = `
<div class="d-flex align-items-start">
	<i class="bi bi-check-circle-fill fs-1 text-white bg-success p-2 rounded-circle me-3"></i>

	<div>
		<h5 class="fw-bold mb-1">Patient ajout√© avec succ√®s ! üéâ</h5>

		<p class="mb-1">
			Le nouveau patient a √©t√© bien enregistr√© dans le syst√®me.
		</p>

		<ul class="mb-1 ps-3" style="font-size: 0.9rem;">
			<li><strong>Nom :</strong> ${result.nom}</li>
			<li><strong>Ville :</strong> ${result.ville}</li>
			<li><strong>T√©l√©phone :</strong> ${result.telephone}</li>
		</ul>

<a href="${routeShowPatient}/${result.id}" class="btn btn-outline-light btn-sm px-3 rounded-pill shadow-sm mt-2">
	<i class="bi bi-eye"></i>
	Voir le patient
</a>

	</div>

	<button type="button" class="btn-close" onclick="document.getElementById('popupSuccess').style.display='none';"></button>
</div>
            `;

           

        } catch (error) {
            console.error("Erreur JS :", error);
            buttonSoundError('buttonSave');
            moveElement("modalAddClient");
            showFlashError("Erreur lors de l‚Äôenregistrement !");
        }
    });
});
</script>

{% endblock %}


 <script>
function closeDocumentsModal() {
    const modalEl = document.getElementById('documentsModal');
    if (!modalEl) return;

    const modalInstance = bootstrap.Modal.getInstance(modalEl);
    if (modalInstance) {
        modalInstance.hide();
    }
}
</script>



<div class="modal fade" id="modalRdv" tabindex="-1">
	<div class="modal-dialog modal-lg">
		<div class="modal-content rounded-4">

			<div class="modal-header bg-primary text-white">
				<h5 class="modal-title">
					<i class="bi bi-calendar-plus me-2"></i>
					Nouveau rendez-vous
				</h5>
				<button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
			</div>

			<div
				class="modal-body">

				<!-- DATE -->
				<div class="mb-3">
					<label class="form-label fw-bold">Date</label>
					<input type="date" id="rdvDate" class="form-control">
				</div>

				<!-- CRENEAUX -->
				<div class="mb-3">
					<label class="form-label fw-bold">Créneau disponible</label>
					<select id="rdvCreneau" class="form-select">
						<option value="">Sélectionnez une date</option>
					</select>
				</div>

				<!-- MOTIF -->
				<div class="mb-3">
					<label class="form-label fw-bold">Motif (optionnel)</label>
					<input type="text" id="rdvMotif" class="form-control">
				</div>

			</div>

			<div class="modal-footer">
				<button class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
				<button class="btn btn-primary" id="btnConfirmRdv">
					<i class="bi bi-check-circle"></i>
					Confirmer le rendez-vous
				</button>
			</div>

		</div>
	</div>
</div>


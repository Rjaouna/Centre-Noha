{# =======================
   PRESTATIONS (bloc complet)
   Usage:
   {% include 'fiche_client/_composants/_prestations.html.twig' with { fiche_client: fiche_client } %}
   ======================= #}

<div class="rounded-4">

	<div class="d-flex align-items-center justify-content-between mb-3">
		<h5 class="fw-bold text-primary mb-0 d-flex align-items-center gap-2">
			<i class="bi bi-clipboard2-check"></i>
			Prestations réalisées
		</h5>

		<button type="button" class="btn btn-primary rounded-pill d-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#prestationsModal">
			<i class="bi bi-plus-circle"></i>
			
		</button>
	</div>

	<div id="prestationsEmpty" class="text-center py-4 d-none">
		<i class="bi bi-clipboard2-x fs-1 text-primary"></i>
		<p class="text-muted mt-2 mb-3">Aucune prestation enregistrée pour ce patient</p>
		<button type="button" class="btn btn-outline-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#prestationsModal">
			<i class="bi bi-plus-circle"></i>
			Ajouter des prestations
		</button>
	</div>

	<div id="prestationsList" class="d-none"></div>

</div>


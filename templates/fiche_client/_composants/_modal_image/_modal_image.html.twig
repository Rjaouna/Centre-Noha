<div class="modal fade" id="modalUploadImage" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header bg-primary text-white">
				<h5 class="modal-title">Ajouter une image</h5>
				<button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
			</div>

			<div class="modal-body">

				<form id="imageUploadForm" enctype="multipart/form-data">
					<input type="file" name="image[imageFile]" class="form-control mb-3" accept="image/*" required>

					<button type="submit" class="btn btn-success w-100 rounded-pill">
						<i class="bi bi-upload"></i>
						Upload
					</button>
				</form>

				<div id="uploadResult" class="mt-3"></div>

			</div>

		</div>
	</div>
</div>

 <script src="https://unpkg.com/browser-image-compression/dist/browser-image-compression.js"></script>

 <script type="module">
import imageCompression from 'browser-image-compression';

document.getElementById('imageUploadForm').addEventListener('submit', async function (e) {
    e.preventDefault();

    const input = this.querySelector('input[type="file"]');
    const file = input.files[0];

    if (!file) {
        alert("Aucune image sélectionnée");
        return;
    }

    // ⚡ COMPRESSION
    let compressedFile;
    try {
        compressedFile = await imageCompression(file, {
            maxSizeMB: 2,
            maxWidthOrHeight: 1920,
            useWebWorker: true
        });
    } catch (e) {
        alert("Erreur lors de la compression");
        return;
    }

    const formData = new FormData();
    formData.append('image[imageFile]', compressedFile);

    const url = "{{ path('app_image_upload', { id: fiche_client.id }) }}";

    const response = await fetch(url, {
        method: "POST",
        body: formData
    });

    let data;
    try {
        data = await response.json();
    } catch {
        alert("Erreur serveur");
        return;
    }

    if (data.status === 'success') {
        addImageToGallery(data.fileName, data.id);

        const modal = bootstrap.Modal.getInstance(
            document.getElementById('modalUploadImage')
        );
        modal.hide();

        this.reset();
    } else {
        alert(data.message);
    }
});
</script>











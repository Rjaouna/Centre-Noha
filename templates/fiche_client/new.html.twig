<div data-turbo="false">
	{{ include('fiche_client/_form.html.twig') }}
</div>

 <script>
document.addEventListener("DOMContentLoaded", () => {

    buttonSoundClick("buttonSave", "disabled");

    const form    = document.getElementById("ficheForm");
    const pop     = document.getElementById("popupSuccess");
    const modalEl = document.getElementById("modalAddClient");
    const modal   = modalEl ? new bootstrap.Modal(modalEl) : null;

    form.addEventListener("submit", async function (e) {
        e.preventDefault();

        const formData = new FormData(form);
        let data = {};

        formData.forEach((value, key) => {
            const cleanKey = key.replace('fiche_client[', '').replace(']', '');
            data[cleanKey] = value;
        });

        try {
            const response = await fetch("{{ path('app_fiche_client_new') }}", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "X-Requested-With": "XMLHttpRequest"
                },
                body: JSON.stringify(data)
            });

            const text = await response.text();

            if (!response.ok) {
                if (modalEl) moveElement("modalAddClient");
                showFlashError("Erreur lors de l‚Äôenregistrement !");
                buttonSoundError('buttonSave');
                return;
            }

            let result;
            try {
                result = JSON.parse(text);
            } catch {
                if (modalEl) moveElement("modalAddClient");
                showFlashError("Erreur lors de l‚Äôenregistrement !");
                buttonSoundError('buttonSave');
                return;
            }

            buttonSoundSuccess('buttonSave');

            // üü¢ Afficher le popup APR√àS fermeture de la modal
            modalEl.addEventListener("hidden.bs.modal", () => {

                if (pop) {
                    pop.style.display = "block"; // ‚Üê remplace d-none par block

                    pop.innerHTML = `
<div class="d-flex align-items-start">
    <i class="bi bi-check-circle-fill fs-1 text-white bg-success p-2 rounded-circle me-3"></i>

    <div>
        <h5 class="fw-bold mb-1">Patient ajout√© avec succ√®s ! üéâ</h5>
        <p class="mb-1">Le nouveau patient a bien √©t√© enregistr√©.</p>

        <ul class="mb-1 ps-3" style="font-size: 0.9rem;">
            <li><strong>Nom :</strong> ${result.nom}</li>
            <li><strong>Ville :</strong> ${result.ville}</li>
            <li><strong>T√©l√©phone :</strong> ${result.telephone}</li>
        </ul>

        <a href="/fiche/client/${result.id}" class="btn btn-secondary btn-sm rounded-pill px-3 py-1 shadow-sm">
            <i class="bi bi-eye"></i> Voir la fiche
        </a>

        <br>
        <small class="text-muted d-block mt-2">Merci ‚úîÔ∏è</small>
    </div>

    <button type="button" class="btn-close ms-2" onclick="document.getElementById('popupSuccess').style.display='none';"></button>
</div>`;
                }

                // animation sur le bloc clients
                if (document.getElementById("blocListClient")) {
                    moveElement("blocListClient");
                }

            }, { once: true });

            // reset + fermer modal
            form.reset();
            if (modal) modal.hide();

        } catch (error) {
            console.error("Erreur JS :", error);
            buttonSoundError('buttonSave');

            if (modalEl) moveElement("modalAddClient");

            showFlashError("Erreur lors de l‚Äôenregistrement !");
        }
    });

    enableShakeLoop("fiche_client_telephone");

});
</script>



